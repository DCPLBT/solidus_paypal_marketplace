<% case @seller.status %>
<% when 'accepted' %>
  Accepted
<% when 'rejected' %>
  Rejected
<% when 'pending' %>
  <% if @seller.action_url.present? %>
    <div dir="ltr" style="text-align: left;" trbidi="on">
      <script>
        (function(d, s, id) {
          var js, ref = d.getElementsByTagName(s)[0];
          if (!d.getElementById(id)) {
            js = d.createElement(s);
            js.id = id;
            js.async = true;
            js.src = "https://www.paypal.com/webapps/merchantboarding/js/lib/lightbox/partner.js";
            ref.parentNode.insertBefore(js, ref);
          }
        }(document, "script", "paypal-js"));

      </script>
      <%=
        link_to(
          I18n.t('spree.seller.link_paypal_account'),
          "#{@seller.action_url}&displayMode=minibrowser",
          target: 'PPFrame',
          data: {
            'paypal-button': true
          }
        )
      %>
    </div>
  <% else %>
    Contact the platform owner
  <% end %>
<% else %>
  Contact the platform owner
<% end %>
